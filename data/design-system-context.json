{
  "name": "SaaS Template Design System",
  "description": "Dark theme with emerald accents - Shopify-inspired professional aesthetic",
  "theme": "dark",

  "colors": {
    "primary": {
      "main": "#00d084",
      "dark": "#00b372",
      "light": "#1ad692",
      "surface": "rgba(0, 208, 132, 0.08)",
      "hover": "#00b372"
    },
    "background": {
      "page": "#111111",
      "secondary": "#181818",
      "surface": "#1a1a1a",
      "surfaceNeutral": "#202020",
      "surfaceSubdued": "#2a2a2a",
      "card": "#1a1a1a"
    },
    "text": {
      "primary": "#f0f0f0",
      "secondary": "#b5b5b5",
      "subdued": "#8a8a8a",
      "disabled": "#6a6a6a",
      "onPrimary": "#ffffff"
    },
    "border": {
      "default": "#303030",
      "subdued": "#262626",
      "hover": "#404040"
    },
    "status": {
      "success": "#00d084",
      "warning": "#f59e0b",
      "error": "#ff6d6d",
      "info": "#3b82f6"
    }
  },

  "typography": {
    "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif",
    "googleFontUrl": "https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap",
    "sizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "2rem",
      "4xl": "2.5rem",
      "5xl": "3rem"
    },
    "weights": {
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800
    },
    "lineHeight": {
      "tight": 1.25,
      "normal": 1.5,
      "relaxed": 1.75
    }
  },

  "spacing": {
    "scale": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem"
    },
    "section": "4rem",
    "container": "1280px",
    "containerPadding": "1.5rem"
  },

  "borderRadius": {
    "none": "0",
    "sm": "4px",
    "base": "6px",
    "md": "8px",
    "lg": "12px",
    "xl": "16px",
    "2xl": "24px",
    "full": "9999px"
  },

  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.3)",
    "base": "0 0 0 1px rgba(255, 255, 255, 0.05), 0 1px 3px 0 rgba(0, 0, 0, 0.4)",
    "md": "0 0 0 1px rgba(255, 255, 255, 0.05), 0 4px 6px -1px rgba(0, 0, 0, 0.4)",
    "lg": "0 0 0 1px rgba(255, 255, 255, 0.05), 0 10px 15px -3px rgba(0, 0, 0, 0.5)",
    "xl": "0 0 0 1px rgba(255, 255, 255, 0.05), 0 20px 25px -5px rgba(0, 0, 0, 0.6)",
    "glow": "0 0 20px rgba(0, 208, 132, 0.3)"
  },

  "transitions": {
    "fast": "100ms ease",
    "base": "200ms ease",
    "slow": "300ms ease",
    "timing": "cubic-bezier(0.25, 0.1, 0.25, 1)"
  },

  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },

  "components": {
    "button": {
      "primary": {
        "background": "#00d084",
        "backgroundHover": "#00b372",
        "text": "#ffffff",
        "borderRadius": "6px",
        "padding": "0.75rem 1.5rem",
        "fontWeight": 600
      },
      "secondary": {
        "background": "#2a2a2a",
        "backgroundHover": "#303030",
        "text": "#f0f0f0",
        "border": "1px solid #404040"
      },
      "ghost": {
        "background": "transparent",
        "backgroundHover": "rgba(255, 255, 255, 0.1)",
        "text": "#b5b5b5"
      }
    },
    "card": {
      "background": "#1a1a1a",
      "border": "1px solid #303030",
      "borderRadius": "12px",
      "padding": "1.5rem",
      "shadow": "0 0 0 1px rgba(255, 255, 255, 0.05), 0 1px 3px 0 rgba(0, 0, 0, 0.4)"
    },
    "input": {
      "background": "#1a1a1a",
      "border": "1px solid #303030",
      "borderFocus": "1px solid #00d084",
      "borderRadius": "6px",
      "padding": "0.75rem 1rem",
      "text": "#f0f0f0",
      "placeholder": "#6a6a6a"
    },
    "badge": {
      "success": { "bg": "rgba(0, 208, 132, 0.15)", "text": "#00d084", "border": "rgba(0, 208, 132, 0.3)" },
      "warning": { "bg": "rgba(245, 158, 11, 0.15)", "text": "#f59e0b", "border": "rgba(245, 158, 11, 0.3)" },
      "error": { "bg": "rgba(255, 109, 109, 0.15)", "text": "#ff6d6d", "border": "rgba(255, 109, 109, 0.3)" },
      "info": { "bg": "rgba(59, 130, 246, 0.15)", "text": "#3b82f6", "border": "rgba(59, 130, 246, 0.3)" }
    }
  },

  "patterns": {
    "hero": {
      "minHeight": "80vh",
      "background": "linear-gradient(135deg, #111111 0%, #1a1a1a 100%)",
      "headingSize": "3rem",
      "subheadingSize": "1.25rem"
    },
    "section": {
      "paddingY": "5rem",
      "maxWidth": "1280px",
      "gap": "3rem"
    },
    "grid": {
      "columns": "repeat(auto-fit, minmax(280px, 1fr))",
      "gap": "1.5rem"
    }
  },

  "effects": {
    "glassmorphism": {
      "background": "rgba(26, 26, 26, 0.8)",
      "backdropFilter": "blur(12px)",
      "border": "1px solid rgba(255, 255, 255, 0.1)"
    },
    "gradient": {
      "primary": "linear-gradient(135deg, #00d084 0%, #00b372 100%)",
      "dark": "linear-gradient(135deg, #111111 0%, #1a1a1a 100%)",
      "glow": "radial-gradient(circle at center, rgba(0, 208, 132, 0.15) 0%, transparent 70%)"
    },
    "hoverScale": "transform: scale(1.02)",
    "hoverLift": "transform: translateY(-4px)"
  },

  "cssVariables": {
    "--color-primary": "#00d084",
    "--color-primary-dark": "#00b372",
    "--color-bg": "#111111",
    "--color-surface": "#1a1a1a",
    "--color-text": "#f0f0f0",
    "--color-text-secondary": "#b5b5b5",
    "--color-border": "#303030",
    "--font-family": "'Inter', sans-serif",
    "--radius-base": "6px",
    "--radius-card": "12px",
    "--transition-base": "200ms ease"
  }
}
