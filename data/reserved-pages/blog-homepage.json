  "html_code": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <meta name=\"description\" content=\"AI VIDEO SAAS Blog - Learn about AI video generation, models, and best practices for creating videos with AI\">\n    <meta name=\"keywords\" content=\"AI video, video generation, AI models, SaaS, video API\">\n    <title>Blog - AI VIDEO SAAS | AI Video Generation Insights & Updates</title>\n    <script src=\"https://cdn.tailwindcss.com\"></script>\n    <link rel=\"stylesheet\" href=\"https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css\">\n    <style>\n        :root {\n            --primary: #10B981;\n            --secondary: #059669;\n            --accent: #34D399;\n        }\n        \n        * {\n            margin: 0;\n            padding: 0;\n            box-sizing: border-box;\n        }\n        \n        body {\n            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;\n            background: #ffffff;\n            color: #1f2937;\n            line-height: 1.6;\n        }\n        \n        .gradient-text {\n            background: linear-gradient(135deg, var(--primary), var(--secondary));\n            -webkit-background-clip: text;\n            -webkit-text-fill-color: transparent;\n            background-clip: text;\n        }\n        \n        .blog-card {\n            transition: all 0.3s ease;\n            border: 1px solid #e5e7eb;\n        }\n        \n        .blog-card:hover {\n            transform: translateY(-8px);\n            box-shadow: 0 20px 40px rgba(16, 185, 129, 0.15);\n            border-color: var(--accent);\n        }\n        \n        .featured-card {\n            background: linear-gradient(135deg, rgba(16, 185, 129, 0.05), rgba(5, 150, 105, 0.05));\n            border: 2px solid var(--accent);\n        }\n        \n        .category-tag {\n            transition: all 0.2s ease;\n        }\n        \n        .category-tag:hover {\n            background: var(--primary);\n            color: white;\n            transform: scale(1.05);\n        }\n        \n        .category-tag.active {\n            background: var(--primary);\n            color: white;\n        }\n        \n        .search-input:focus {\n            outline: none;\n            border-color: var(--primary);\n            box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);\n        }\n        \n        .pagination-btn {\n            transition: all 0.2s ease;\n        }\n        \n        .pagination-btn:hover:not(:disabled) {\n            background: var(--primary);\n            color: white;\n            transform: scale(1.05);\n        }\n        \n        .pagination-btn.active {\n            background: var(--primary);\n            color: white;\n        }\n        \n        .pagination-btn:disabled {\n            opacity: 0.4;\n            cursor: not-allowed;\n        }\n        \n        .skeleton {\n            background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);\n            background-size: 200% 100%;\n            animation: loading 1.5s infinite;\n        }\n        \n        @keyframes loading {\n            0% { background-position: 200% 0; }\n            100% { background-position: -200% 0; }\n        }\n        \n        .post-image {\n            height: 200px;\n            object-fit: cover;\n            background: #f3f4f6;\n        }\n        \n        .featured-image {\n            height: 400px;\n            object-fit: cover;\n        }\n        \n        @media (max-width: 768px) {\n            .featured-image {\n                height: 250px;\n            }\n            .post-image {\n                height: 180px;\n            }\n        }\n    </style>\n</head>\n<body>\n    <!-- Navigation -->\n    <nav class=\"bg-white shadow-sm sticky top-0 z-50\">\n        <div class=\"max-w-7xl mx-auto px-4 sm:px-6 lg:px-8\">\n            <div class=\"flex justify-between items-center h-16\">\n                <div class=\"flex items-center space-x-2\">\n                    <i class=\"fas fa-video text-3xl\" style=\"color: var(--primary);\"></i>\n                    <span class=\"text-xl font-bold gradient-text\">AI VIDEO SAAS</span>\n                </div>\n                <div class=\"hidden md:flex items-center space-x-8\">\n                    <a href=\"/\" class=\"text-gray-600 hover:text-gray-900 transition\">Home</a>\n                    <a href=\"/features\" class=\"text-gray-600 hover:text-gray-900 transition\">Features</a>\n                    <a href=\"/pricing\" class=\"text-gray-600 hover:text-gray-900 transition\">Pricing</a>\n                    <a href=\"/blog\" class=\"font-semibold\" style=\"color: var(--primary);\">Blog</a>\n                    <button class=\"px-6 py-2 rounded-lg text-white font-medium transition\" style=\"background: var(--primary);\">\n                        Get Started\n                    </button>\n                </div>\n                <button class=\"md:hidden text-gray-600\">\n                    <i class=\"fas fa-bars text-xl\"></i>\n                </button>\n            </div>\n        </div>\n    </nav>\n\n    <!-- Blog Header -->\n    <header class=\"bg-gradient-to-br from-gray-50 to-white py-16 px-4\">\n        <div class=\"max-w-7xl mx-auto text-center\">\n            <h1 class=\"text-5xl md:text-6xl font-bold mb-6 gradient-text\">Blog & Insights</h1>\n            <p class=\"text-xl text-gray-600 max-w-3xl mx-auto mb-8\">\n                Discover the latest trends in AI video generation, tutorials, and industry insights\n            </p>\n            \n            <!-- Search Bar -->\n            <div class=\"max-w-2xl mx-auto\">\n                <div class=\"relative\">\n                    <input \n                        type=\"text\" \n                        id=\"searchInput\"\n                        placeholder=\"Search articles, tutorials, and guides...\" \n                        class=\"w-full px-6 py-4 pl-14 rounded-full border-2 border-gray-200 search-input text-lg\"\n                    >\n                    <i class=\"fas fa-search absolute left-5 top-1/2 transform -translate-y-1/2 text-gray-400 text-xl\"></i>\n                </div>\n            </div>\n        </div>\n    </header>\n\n    <!-- Categories -->\n    <section class=\"bg-white py-8 px-4 border-b\">\n        <div class=\"max-w-7xl mx-auto\">\n            <div class=\"flex flex-wrap gap-3 justify-center\" id=\"categoriesContainer\">\n                <button class=\"category-tag active px-6 py-2 rounded-full bg-gray-100 text-gray-700 font-medium cursor-pointer\" data-category=\"all\">\n                    All Posts\n                </button>\n                <button class=\"category-tag px-6 py-2 rounded-full bg-gray-100 text-gray-700 font-medium cursor-pointer\" data-category=\"tutorials\">\n                    Tutorials\n                </button>\n                <button class=\"category-tag px-6 py-2 rounded-full bg-gray-100 text-gray-700 font-medium cursor-pointer\" data-category=\"ai-models\">\n                    AI Models\n                </button>\n                <button class=\"category-tag px-6 py-2 rounded-full bg-gray-100 text-gray-700 font-medium cursor-pointer\" data-category=\"api\">\n                    API & Integration\n                </button>\n                <button class=\"category-tag px-6 py-2 rounded-full bg-gray-100 text-gray-700 font-medium cursor-pointer\" data-category=\"case-studies\">\n                    Case Studies\n                </button>\n                <button class=\"category-tag px-6 py-2 rounded-full bg-gray-100 text-gray-700 font-medium cursor-pointer\" data-category=\"updates\">\n                    Product Updates\n                </button>\n            </div>\n        </div>\n    </section>\n\n    <!-- Featured Post -->\n    <section class=\"py-12 px-4 bg-white\" id=\"featuredSection\">\n        <div class=\"max-w-7xl mx-auto\">\n            <div class=\"flex items-center mb-8\">\n                <i class=\"fas fa-star text-2xl mr-3\" style=\"color: var(--primary);\"></i>\n                <h2 class=\"text-3xl font-bold text-gray-900\">Featured Article</h2>\n            </div>\n            \n            <div id=\"featuredPost\" class=\"featured-card rounded-2xl overflow-hidden shadow-lg\">\n                <!-- Featured post will be loaded here -->\n            </div>\n        </div>\n    </section>\n\n    <!-- Blog Grid -->\n    <section class=\"py-12 px-4 bg-gray-50\">\n        <div class=\"max-w-7xl mx-auto\">\n            <div class=\"flex items-center justify-between mb-8\">\n                <h2 class=\"text-3xl font-bold text-gray-900\">Latest Articles</h2>\n                <div class=\"flex items-center space-x-4\">\n                    <select class=\"px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-primary\" id=\"sortSelect\">\n                        <option value=\"latest\">Latest First</option>\n                        <option value=\"oldest\">Oldest First</option>\n                        <option value=\"popular\">Most Popular</option>\n                    </select>\n                </div>\n            </div>\n            \n            <div id=\"postsGrid\" class=\"grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8\">\n                <!-- Blog posts will be loaded here -->\n            </div>\n            \n            <!-- Loading State -->\n            <div id=\"loadingState\" class=\"grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8\">\n                <!-- Skeleton cards -->\n                <div class=\"blog-card rounded-xl overflow-hidden bg-white\">\n                    <div class=\"skeleton post-image\"></div>\n                    <div class=\"p-6\">\n                        <div class=\"skeleton h-4 w-24 rounded mb-4\"></div>\n                        <div class=\"skeleton h-6 w-full rounded mb-3\"></div>\n                        <div class=\"skeleton h-4 w-full rounded mb-2\"></div>\n                        <div class=\"skeleton h-4 w-3/4 rounded mb-4\"></div>\n                        <div class=\"skeleton h-10 w-32 rounded\"></div>\n                    </div>\n                </div>\n                <div class=\"blog-card rounded-xl overflow-hidden bg-white\">\n                    <div class=\"skeleton post-image\"></div>\n                    <div class=\"p-6\">\n                        <div class=\"skeleton h-4 w-24 rounded mb-4\"></div>\n                        <div class=\"skeleton h-6 w-full rounded mb-3\"></div>\n                        <div class=\"skeleton h-4 w-full rounded mb-2\"></div>\n                        <div class=\"skeleton h-4 w-3/4 rounded mb-4\"></div>\n                        <div class=\"skeleton h-10 w-32 rounded\"></div>\n                    </div>\n                </div>\n                <div class=\"blog-card rounded-xl overflow-hidden bg-white\">\n                    <div class=\"skeleton post-image\"></div>\n                    <div class=\"p-6\">\n                        <div class=\"skeleton h-4 w-24 rounded mb-4\"></div>\n                        <div class=\"skeleton h-6 w-full rounded mb-3\"></div>\n                        <div class=\"skeleton h-4 w-full rounded mb-2\"></div>\n                        <div class=\"skeleton h-4 w-3/4 rounded mb-4\"></div>\n                        <div class=\"skeleton h-10 w-32 rounded\"></div>\n                    </div>\n                </div>\n            </div>\n            \n            <!-- Empty State -->\n            <div id=\"emptyState\" class=\"hidden text-center py-16\">\n                <i class=\"fas fa-search text-6xl text-gray-300 mb-4\"></i>\n                <h3 class=\"text-2xl font-bold text-gray-700 mb-2\">No articles found</h3>\n                <p class=\"text-gray-500\">Try adjusting your search or filter criteria</p>\n            </div>\n        </div>\n    </section>\n\n    <!-- Pagination -->\n    <section class=\"py-12 px-4 bg-gray-50\">\n        <div class=\"max-w-7xl mx-auto\">\n            <div id=\"paginationContainer\" class=\"flex justify-center items-center space-x-2\">\n                <!-- Pagination will be loaded here -->\n            </div>\n        </div>\n    </section>\n\n    <!-- Newsletter CTA -->\n    <section class=\"py-16 px-4\" style=\"background: linear-gradient(135deg, var(--primary), var(--secondary));\">\n        <div class=\"max-w-4xl mx-auto text-center\">\n            <i class=\"fas fa-envelope text-5xl text-white mb-6\"></i>\n            <h2 class=\"text-4xl font-bold text-white mb-4\">Stay Updated</h2>\n            <p class=\"text-xl text-white/90 mb-8\">\n                Get the latest AI video generation tips, tutorials, and product updates delivered to your inbox\n            </p>\n            <div class=\"flex flex-col sm:flex-row gap-4 max-w-xl mx-auto\">\n                <input \n                    type=\"email\" \n                    placeholder=\"Enter your email\" \n                    class=\"flex-1 px-6 py-4 rounded-lg text-lg focus:outline-none focus:ring-4 focus:ring-white/30\"\n                >\n                <button class=\"px-8 py-4 bg-white text-gray-900 font-bold rounded-lg hover:bg-gray-100 transition\">\n                    Subscribe\n                </button>\n            </div>\n        </div>\n    </section>\n\n    <!-- Footer -->\n    <footer class=\"bg-gray-900 text-white py-12 px-4\">\n        <div class=\"max-w-7xl mx-auto\">\n            <div class=\"grid grid-cols-1 md:grid-cols-4 gap-8 mb-8\">\n                <div>\n                    <div class=\"flex items-center space-x-2 mb-4\">\n                        <i class=\"fas fa-video text-2xl\" style=\"color: var(--primary);\"></i>\n                        <span class=\"text-xl font-bold\">AI VIDEO SAAS</span>\n                    </div>\n                    <p class=\"text-gray-400 mb-4\">\n                        All-in-one SaaS tool to generate videos from all AI models\n                    </p>\n                    <div class=\"flex space-x-4\">\n                        <a href=\"#\" class=\"text-gray-400 hover:text-white transition\"><i class=\"fab fa-twitter text-xl\"></i></a>\n                        <a href=\"#\" class=\"text-gray-400 hover:text-white transition\"><i class=\"fab fa-linkedin text-xl\"></i></a>\n                        <a href=\"#\" class=\"text-gray-400 hover:text-white transition\"><i class=\"fab fa-github text-xl\"></i></a>\n                        <a href=\"#\" class=\"text-gray-400 hover:text-white transition\"><i class=\"fab fa-youtube text-xl\"></i></a>\n                    </div>\n                </div>\n                \n                <div>\n                    <h3 class=\"font-bold mb-4\">Product</h3>\n                    <ul class=\"space-y-2 text-gray-400\">\n                        <li><a href=\"#\" class=\"hover:text-white transition\">Features</a></li>\n                        <li><a href=\"#\" class=\"hover:text-white transition\">Pricing</a></li>\n                        <li><a href=\"#\" class=\"hover:text-white transition\">API Documentation</a></li>\n                        <li><a href=\"#\" class=\"hover:text-white transition\">Integrations</a></li>\n                    </ul>\n                </div>\n                \n                <div>\n                    <h3 class=\"font-bold mb-4\">Resources</h3>\n                    <ul class=\"space-y-2 text-gray-400\">\n                        <li><a href=\"#\" class=\"hover:text-white transition\">Blog</a></li>\n                        <li><a href=\"#\" class=\"hover:text-white transition\">Tutorials</a></li>\n                        <li><a href=\"#\" class=\"hover:text-white transition\">Case Studies</a></li>\n                        <li><a href=\"#\" class=\"hover:text-white transition\">Support</a></li>\n                    </ul>\n                </div>\n                \n                <div>\n                    <h3 class=\"font-bold mb-4\">Company</h3>\n                    <ul class=\"space-y-2 text-gray-400\">\n                        <li><a href=\"#\" class=\"hover:text-white transition\">About Us</a></li>\n                        <li><a href=\"#\" class=\"hover:text-white transition\">Careers</a></li>\n                        <li><a href=\"#\" class=\"hover:text-white transition\">Contact</a></li>\n                        <li><a href=\"#\" class=\"hover:text-white transition\">Privacy Policy</a></li>\n                    </ul>\n                </div>\n            </div>\n            \n            <div class=\"border-t border-gray-800 pt-8 text-center text-gray-400\">\n                <p>&copy; 2024 AI VIDEO SAAS. All rights reserved. Saving 100's on multiple subscriptions.</p>\n            </div>\n        </div>\n    </footer>\n\n    <script>\n        // State management\n        let allPosts = [];\n        let filteredPosts = [];\n        let currentPage = 1;\n        let postsPerPage = 9;\n        let currentCategory = 'all';\n        let currentSort = 'latest';\n        let searchQuery = '';\n\n        // Initialize\n        document.addEventListener('DOMContentLoaded', function() {\n            fetchPosts();\n            setupEventListeners();\n        });\n\n        // Fetch posts from API\n        async function fetchPosts() {\n            showLoading();\n            \n            try {\n                const response = await fetch('/api/public/blog');\n                \n                if (!response.ok) {\n                    throw new Error('Failed to fetch posts');\n                }\n                \n                const data = await response.json();\n                allPosts = data.posts || generateMockPosts();\n                filteredPosts = [...allPosts];\n                \n                hideLoading();\n                renderFeaturedPost();\n                renderPosts();\n                renderPagination();\n            } catch (error) {\n                console.error('Error fetching posts:', error);\n                // Use mock data as fallback\n                allPosts = generateMockPosts();\n                filteredPosts = [...allPosts];\n                hideLoading();\n                renderFeaturedPost();\n                renderPosts();\n                renderPagination();\n            }\n        }\n\n        // Generate mock posts for demo\n        function generateMockPosts() {\n            const categories = ['tutorials', 'ai-models', 'api', 'case-studies', 'updates'];\n            const titles = [\n                'Getting Started with AI Video Generation: A Complete Guide',\n                'Top 5 AI Models for Video Creation in 2024',\n                'How to Integrate Our API in Your Application',\n                'Case Study: How Startup X Generated 1000+ Videos',\n                'New Features: Advanced Video Customization',\n                'Understanding Different AI Video Models',\n                'API Best Practices for Video Generation',\n                'Creating Marketing Videos with AI',\n                'Cost Optimization Tips for AI Video Generation',\n                'Comparing AI Video Generation Models',\n                'Building a Video Platform with Our API',\n                'Success Stories from Our Customers'\n            ];\n            \n            return titles.map((title, index) => ({\n                id: index + 1,\n                title: title,\n                excerpt: 'Discover how to leverage AI video generation technology to create stunning videos at scale. Learn best practices, tips, and techniques from industry experts.',\n                category: categories[index % categories.length],\n                author: 'AI Video Team',\n                date: new Date(Date.now() - Math.random() * 30 * 24 * 60 * 60 * 1000).toISOString(),\n                readTime: Math.floor(Math.random() * 10) + 3,\n                image: `https://source.unsplash.com/800x600/?ai,video,technology&sig=${index}`,\n                featured: index === 0,\n                views: Math.floor(Math.random() * 5000) + 500\n            }));\n        }\n\n        // Render featured post\n        function renderFeaturedPost() {\n            const featured = allPosts.find(post => post.featured) || allPosts[0];\n            if (!featured) return;\n            \n            const featuredHTML = `\n                <div class=\"grid md:grid-cols-2 gap-0\">\n                    <div class=\"relative\">\n                        <img src=\"${featured.image}\" alt=\"${featured.title}\" class=\"w-full featured-image\">\n                        <div class=\"absolute top-4 left-4\">\n                            <span class=\"px-4 py-2 rounded-full text-sm font-bold text-white\" style=\"background: var(--primary);\">\n                                <i class=\"fas fa-star mr-1\"></i> Featured\n                            </span>\n                        </div>\n                    </div>\n                    <div class=\"p-8 md:p-12 flex flex-col justify-center\">\n                        <span class=\"inline-block px-4 py-1 rounded-full text-sm font-medium mb-4\" style=\"background: var(--accent); color: var(--secondary); width: fit-content;\">\n                            ${formatCategory(featured.category)}\n                        </span>\n                        <h3 class=\"text-3xl md:text-4xl font-bold mb-4 text-gray-900\">${featured.title}</h3>\n                        <p class=\"text-gray-600 text-lg mb-6\">${featured.excerpt}</p>\n                        <div class=\"flex items-center text-gray-500 text-sm mb-6\">\n                            <span class=\"mr-4\"><i class=\"far fa-calendar mr-2\"></i>${formatDate(featured.date)}</span>\n                            <span class=\"mr-4\"><i class=\"far fa-clock mr-2\"></i>${featured.readTime} min read</span>\n                            <span><i class=\"far fa-eye mr-2\"></i>${featured.views} views</span>\n                        </div>\n                        <a href=\"#\" class=\"inline-flex items-center px-6 py-3 rounded-lg text-white font-medium transition hover:opacity-90\" style=\"background: var(--primary); width: fit-content;\">\n                            Read Full Article\n                            <i class=\"fas fa-arrow-right ml-2\"></i>\n                        </a>\n                    </div>\n                </div>\n            `;\n            \n            document.getElementById('featuredPost').innerHTML = featuredHTML;\n        }\n\n        // Render posts\n        function renderPosts() {\n            const container = document.getElementById('postsGrid');\n            const emptyState = document.getElementById('emptyState');\n            \n            // Apply filters and sorting\n            applyFilters();\n            \n            // Calculate pagination\n            const startIndex = (currentPage - 1) * postsPerPage;\n            const endIndex = startIndex + postsPerPage;\n            const postsToShow = filteredPosts.slice(startIndex, endIndex);\n            \n            if (postsToShow.length === 0) {\n                container.innerHTML = '';\n                emptyState.classList.remove('hidden');\n                return;\n            }\n            \n            emptyState.classList.add('hidden');\n            \n            const postsHTML = postsToShow.map(post => {\n                if (post.featured) return ''; // Skip featured post in grid\n                \n                return `\n                    <article class=\"blog-card rounded-xl overflow-hidden bg-white\">\n                        <div class=\"relative\">\n                            <img src=\"${post.image}\" alt=\"${post.title}\" class=\"w-full post-image\">\n                            <span class=\"absolute top-4 right-4 px-3 py-1 rounded-full text-xs font-bold text-white\" style=\"background: var(--secondary);\">\n                                ${formatCategory(post.category)}\n                            </span>\n                        </div>\n                        <div class=\"p-6\">\n                            <div class=\"flex items-center text-gray-500 text-sm mb-3\">\n                                <span class=\"mr-3\"><i class=\"far fa-calendar mr-1\"></i>${formatDate(post.date)}</span>\n                                <span><i class=\"far fa-clock mr-1\"></i>${post.readTime} min</span>\n                            </div>\n                            <h3 class=\"text-xl font-bold mb-3 text-gray-900 line-clamp-2\">${post.title}</h3>\n                            <p class=\"text-gray-600 mb-4 line-clamp-3\">${post.excerpt}</p>\n                            <div class=\"flex items-center justify-between\">\n                                <a href=\"#\" class=\"inline-flex items-center font-medium transition\" style=\"color: var(--primary);\">\n                                    Read More\n                                    <i class=\"fas fa-arrow-right ml-2\"></i>\n                                </a>\n                                <span class=\"text-gray-400 text-sm\">\n                                    <i class=\"far fa-eye mr-1\"></i>${post.views}\n                                </span>\n                            </div>\n                        </div>\n                    </article>\n                `;\n            }).join('');\n            \n            container.innerHTML = postsHTML;\n        }\n\n        // Apply filters and sorting\n        function applyFilters() {\n            filteredPosts = allPosts.filter(post => {\n                // Category filter\n                if (currentCategory !== 'all' && post.category !== currentCategory) {\n                    return false;\n                }\n                \n                // Search filter\n                if (searchQuery) {\n                    const query = searchQuery.toLowerCase();\n                    return post.title.toLowerCase().includes(query) || \n                           post.excerpt.toLowerCase().includes(query);\n                }\n                \n                return true;\n            });\n            \n            // Sorting\n            filteredPosts.sort((a, b) => {\n                switch (currentSort) {\n                    case 'latest':\n                        return new Date(b.date) - new Date(a.date);\n                    case 'oldest':\n                        return new Date(a.date) - new Date(b.date);\n                    case 'popular':\n                        return b.views - a.views;\n                    default:\n                        return 0;\n                }\n            });\n        }\n\n        // Render pagination\n        function renderPagination() {\n            const container = document.getElementById('paginationContainer');\n            const totalPages = Math.ceil(filteredPosts.length / postsPerPage);\n            \n            if (totalPages <= 1) {\n                container.innerHTML = '';\n                return;\n            }\n            \n            let paginationHTML = `\n                <button class=\"pagination-btn px-4 py-2 rounded-lg border border-gray-300 font-medium\" \n                        onclick=\"changePage(${currentPage - 1})\" \n                        ${currentPage === 1 ? 'disabled' : ''}>\n                    <i class=\"fas fa-chevron-left\"></i>\n                </button>\n            `;\n            \n            // Page numbers\n            for (let i = 1; i <= totalPages; i++) {\n                if (i === 1 || i === totalPages || (i >= currentPage - 1 && i <= currentPage + 1)) {\n                    paginationHTML += `\n                        <button class=\"pagination-btn px-4 py-2 rounded-lg border border-gray-300 font-medium ${i === currentPage ? 'active' : ''}\" \n                                onclick=\"changePage(${i})\">\n                            ${i}\n                        </button>\n                    `;\n                } else if (i === currentPage - 2 || i === currentPage + 2) {\n                    paginationHTML += `<span class=\"px-2 text-gray-400\">...</span>`;\n                }\n            }\n            \n            paginationHTML += `\n                <button class=\"pagination-btn px-4 py-2 rounded-lg border border-gray-300 font-medium\" \n                        onclick=\"changePage(${currentPage + 1})\" \n                        ${currentPage === totalPages ? 'disabled' : ''}>\n                    <i class=\"fas fa-chevron-right\"></i>\n                </button>\n            `;\n            \n            container.innerHTML = paginationHTML;\n        }\n\n        // Change page\n        function changePage(page) {\n            const totalPages = Math.ceil(filteredPosts.length / postsPerPage);\n            if (page < 1 || page > totalPages) return;\n            \n            currentPage = page;\n            renderPosts();\n            renderPagination();\n            window.scrollTo({ top: 0, behavior: 'smooth' });\n        }\n\n        // Setup event listeners\n        function setupEventListeners() {\n            // Category filters\n            document.querySelectorAll('.category-tag').forEach(tag => {\n                tag.addEventListener('click', function() {\n                    document.querySelectorAll('.category-tag').forEach(t => t.classList.remove('active'));\n                    this.classList.add('active');\n                    currentCategory = this.dataset.category;\n                    currentPage = 1;\n                    renderPosts();\n                    renderPagination();\n                });\n            });\n            \n            // Search\n            const searchInput = document.getElementById('searchInput');\n            let searchTimeout;\n            searchInput.addEventListener('input', function() {\n                clearTimeout(searchTimeout);\n                searchTimeout = setTimeout(() => {\n                    searchQuery = this.value;\n                    currentPage = 1;\n                    renderPosts();\n                    renderPagination();\n                }, 300);\n            });\n            \n            // Sort\n            document.getElementById('sortSelect').addEventListener('change', function() {\n                currentSort = this.value;\n                renderPosts();\n            });\n        }\n\n        // Utility functions\n        function formatDate(dateString) {\n            const date = new Date(dateString);\n            const options = { year: 'numeric', month: 'short', day: 'numeric' };\n            return date.toLocaleDateString('en-US', options);\n        }\n\n        function formatCategory(category) {\n            return category.split('-').map(word => \n                word.charAt(0).toUpperCase() + word.slice(1)\n            )."
